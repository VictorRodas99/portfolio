---
import Layout from '@layouts/Layout.astro'

import GradientBackground from '@components/GradientBackground'
import LayoutHeader from '@components/LayoutHeader.astro'
import HeroSection from '@components/HeroSection.astro'
import ArrowButton from '@components/ArrowButton.astro'
import Experience from '@components/Experience.astro'
import Projects from '@components/Projects.astro'
import Skills from '@components/Skills.astro'
---

<Layout title="Welcome to Astro.">
  <LayoutHeader />
  <GradientBackground client:visible />

  <section class="flex flex-col w-full gap-16">
    <HeroSection />

    <ArrowButton />

    <Experience />
    <Projects />
    <Skills />
  </section>
</Layout>

<script>
  import { setThemePrefrence } from '@client-scripts/theme-control'
  window.addEventListener('load', setThemePrefrence)
</script>
