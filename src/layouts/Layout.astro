---
import Header from '@layouts/LayoutHeader.astro'
import Footer from '@layouts/LayoutFooter.astro'

interface Props {
  title: string
  lang: string
}

const { title, lang } = Astro.props
---

<!DOCTYPE html>
<html lang={lang} class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Soy Víctor Rodas. Software Developer" />
    <meta name="author" content="Víctor Rodas" />
    <meta property="og:title" content="Víctor Rodas. Portfolio" />
    <meta
      property="og:image"
      content="https://github.com/VictorRodas99/portfolio/raw/main/docs/screenshot.png"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-primary-200 dark:bg-secondary-300 dark:text-primary-50">
    <Header />
    <main class="py-8 px-6 md:px-12 lg:px-16 min-w-full">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<script>
  import { setThemePrefrence } from '@client-scripts/theme-control'
  window.addEventListener('load', setThemePrefrence)
</script>

<style is:global>
  @font-face {
    font-family: 'Inter';
    src: url('/fonts/Inter-ExtraBold.ttf');
    font-weight: bolder;
    font-style: oblique;
    font-display: swap;
  }

  @font-face {
    font-family: 'Inter';
    src: url('/fonts/Inter-Bold.ttf');
    font-weight: bold;
    font-display: swap;
  }

  @font-face {
    font-family: 'Inter';
    src: url('/fonts/Inter-Medium.ttf');
    font-weight: 500;
    font-display: swap;
  }

  @font-face {
    font-family: 'Inter';
    src: url('/fonts/Inter-SemiBold.ttf');
    font-weight: 200;
    font-display: swap;
  }

  @font-face {
    font-family: 'Inter';
    src: url('/fonts/Inter-Thin.ttf');
    font-weight: lighter;
    font-display: swap;
  }

  @font-face {
    font-family: 'Inter';
    src: url('/fonts/Inter-Regular.ttf');
    font-display: swap;
  }

  :root {
    --animation-duration: 0.3s;
  }

  html {
    scroll-behavior: smooth;
    font-family: 'Inter', system-ui, sans-serif;
  }
</style>
