---
import Header from '@layouts/LayoutHeader.astro'
import Footer from '@layouts/LayoutFooter.astro'

interface Props {
  title: string
  lang: string
}

const { title, lang } = Astro.props
---

<!DOCTYPE html>
<html lang={lang} class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-primary-200 dark:bg-secondary-300 dark:text-primary-50">
    <Header />
    <main class="py-8 px-6 md:px-12 lg:px-16 min-w-full">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<script>
  import { setThemePrefrence } from '@client-scripts/theme-control'
  window.addEventListener('load', setThemePrefrence)
</script>

<style is:global>
  /* Temporal */
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap');

  :root {
    --animation-duration: 0.3s;
  }

  html {
    scroll-behavior: smooth;
    font-family: 'Inter', system-ui, sans-serif;
  }
</style>
