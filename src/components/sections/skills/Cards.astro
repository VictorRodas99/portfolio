---
import SkillCard from '@components/sections/skills/SkillCard.astro'

import TypeScriptIcon from '@components/icons/skills/transparent/TypeScriptIcon.astro'
import BootstrapIcon from '@components/icons/skills/transparent/BootstrapIcon.astro'
import TailwindIcon from '@components/icons/skills/transparent/TailwindIcon.astro'
import ExpressIcon from '@components/icons/skills/transparent/ExpressIcon.astro'
import NodejsIcon from '@components/icons/skills/transparent/NodejsIcon.astro'
import PythonIcon from '@components/icons/skills/transparent/PythonIcon.astro'
import ReactIcon from '@components/icons/skills/transparent/ReactIcon.astro'
import MySQLIcon from '@components/icons/skills/transparent/MySQLIcon.astro'
import AstroIcon from '@components/icons/skills/AstroIcon.astro'

import { getEntry } from 'astro:content'

const { data } = await getEntry('skills', Astro.params.lang)
const { skills: skillsData } = data
---

<!-- Skills: React, Astro, Express, TypeScript, Tailwind, Bootstrap, Python, NodeJS, MySQL -->
<!-- Tools: Git, Bash, Powershell, Postman -->

<article class="grid md:grid-cols-2 lg:grid-cols-3 gap-4 md:px-10">
  <SkillCard
    name={skillsData.react.name}
    description={skillsData.react.description}
    iconColor="#61DAFB"
    navigateTo={skillsData.react.docs}
  >
    <ReactIcon size={90} slot="icon" color="currentColor" />
  </SkillCard>

  <SkillCard
    name={skillsData.astro.name}
    description={skillsData.astro.description}
    navigateTo={skillsData.astro.docs}
  >
    <AstroIcon size={90} slot="icon" color="currentColor" />
  </SkillCard>

  <SkillCard
    name={skillsData.typescript.name}
    description={skillsData.typescript.description}
    navigateTo={skillsData.typescript.docs}
  >
    <TypeScriptIcon size={90} slot="icon" color="auto" />
  </SkillCard>

  <SkillCard
    name={skillsData.tailwind.name}
    description={skillsData.tailwind.description}
    navigateTo={skillsData.tailwind.docs}
  >
    <TailwindIcon size={90} slot="icon" />
  </SkillCard>

  <SkillCard
    name={skillsData.bootstrap.name}
    description={skillsData.bootstrap.description}
    navigateTo={skillsData.bootstrap.docs}
  >
    <BootstrapIcon size={90} slot="icon" />
  </SkillCard>

  <SkillCard
    name={skillsData.nodejs.name}
    description={skillsData.nodejs.description}
    navigateTo={skillsData.nodejs.docs}
  >
    <NodejsIcon size={90} slot="icon" />
  </SkillCard>

  <SkillCard
    name={skillsData.express.name}
    description={skillsData.express.description}
    navigateTo={skillsData.express.docs}
  >
    <ExpressIcon size={90} slot="icon" />
  </SkillCard>

  <SkillCard
    name={skillsData.python.name}
    description={skillsData.python.description}
    navigateTo={skillsData.python.docs}
  >
    <PythonIcon size={90} slot="icon" />
  </SkillCard>

  <SkillCard
    name={skillsData.mysql.name}
    description={skillsData.mysql.description}
    navigateTo={skillsData.mysql.docs}
  >
    <MySQLIcon size={90} slot="icon" />
  </SkillCard>
</article>
