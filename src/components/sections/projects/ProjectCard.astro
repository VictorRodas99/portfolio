---
import { Image } from 'astro:assets'

interface Props {
  darkImage: ImageMetadata
  lightImage: ImageMetadata
  projectName: string
  projectDescription: string
}

const {
  darkImage,
  lightImage,
  projectName,
  projectDescription
} = Astro.props
---

<div
  class="group flex-grow lg:w-[25%] border border-primary-100 relative rounded-md overflow-hidden"
>
  <header
    class="grid items-center relative lg:min-h-[300px] overflow-hidden"
  >
    <Image
      class="hidden dark:block group-hover:scale-105 transition-transform duration-500 z-10"
      src={darkImage}
      alt="E-commerce Web Project"
    />
    <Image
      class="block dark:hidden group-hover:scale-105 transition-transform duration-500 z-10"
      src={lightImage}
      alt="E-commerce Web Project"
    />
  </header>

  <div
    class="flex flex-col gap-6 relative p-4 lg:translate-y-7 group-hover:translate-y-0 transition-transform duration-200"
  >
    <div
      class="opacity-0 group-hover:opacity-20 absolute -top-8 left-0 -z-10 w-full h-[150%] bg-gradient-to-r from-violet-blue from-38% via-violet-blue via-55% to-light-purple to-90% duration-300 transition-opacity"
    >
    </div>
    <div class="flex flex-col gap-4">
      <h2
        class="font-bold text-center text-xl md:text-2xl md:text-start"
      >
        {projectName}
      </h2>
      <p class="leading-7">
        {projectDescription}
      </p>
    </div>

    <footer
      class="lg:opacity-0 group-hover:opacity-100 transition-all duration-300"
    >
      <ul
        class="flex flex-wrap justify-center gap-3 items-center lg:justify-start"
      >
        <slot />
      </ul>
    </footer>
  </div>
</div>